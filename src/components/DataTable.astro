---
interface Props {
  headers: string[];
  rows: string[][];
}

const { headers, rows } = Astro.props;
---

<div class="table-wrap">
    <table class="brutalist-table">
        <thead>
            <tr>
                {headers.map((h) => <th>{h}</th>)}
            </tr>
        </thead>
        <tbody>
            {rows.map((row) => (
                <tr>
                    {row.map((cell, i) => (
                        <td class={i === 0 ? 'font-bold' : ''} set:html={cell} />
                    ))}
                </tr>
            ))}
        </tbody>
    </table>
</div>
